<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ðŸ”¹ Lottie Animation as Background -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/backgroundAnimation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/lemon"
        android:scaleType="centerCrop" />

    <!-- ðŸ”¸ Foreground Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <TextView
            android:id="@+id/tvDashboardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Dashboard"
            android:textColor="@color/blue_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Removed ListView & CRUD UI -->

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="250dp"
            android:layout_height="231dp"
            android:layout_marginBottom="32dp"
            android:elevation="8dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/too" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:alpha="0.8"
            android:gravity="center"
            android:text="You have successfully logged in"
            android:textColor="#2196F3"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/button_primary"
            android:elevation="4dp"
            android:text="CONTINUE TO TOOLS"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>
