<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <!-- Background Lottie Animation -->
  <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/backgroundAnimation"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_alignParentTop="true"
      android:layout_alignParentBottom="true"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      app:lottie_loop="true"
      app:lottie_autoPlay="true"
      app:lottie_rawRes="@raw/lemon"
      android:scaleType="centerCrop" />

  <!-- Scrollable Content Container -->
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fillViewport="true"
      android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingBottom="40dp">
      <ImageView
          android:id="@+id/backButton"
          android:layout_width="36dp"
          android:layout_height="36dp"
          android:src="@drawable/ic_arrow_back"
          android:contentDescription="Back"
          android:background="@drawable/circular_background"
          android:padding="8dp"
          android:layout_gravity="start"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="2dp" />


      <!-- Header Section -->

      <!-- Main Icon with Background -->
      <com.google.android.material.card.MaterialCardView
          android:layout_width="160dp"
          android:layout_height="160dp"
          android:layout_gravity="center"
          android:layout_marginBottom="40dp"
          app:cardCornerRadius="80dp"
          app:cardElevation="12dp"
          app:cardBackgroundColor="@color/primary_light">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_scan"
            android:contentDescription="@string/scan_icon_desc"
            app:tint="@color/primary" />
      </com.google.android.material.card.MaterialCardView>

      <!-- Scan Options Grid -->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginBottom="24dp">

        <!-- First Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:weightSum="2">

          <!-- Document Scan Card -->
          <com.google.android.material.card.MaterialCardView
              android:id="@+id/cardScanDocument"
              android:layout_width="0dp"
              android:layout_height="140dp"
              android:layout_weight="1"
              android:layout_marginEnd="8dp"
              app:cardCornerRadius="20dp"
              app:cardElevation="8dp"
              app:strokeWidth="0dp"
              android:clickable="true"
              android:focusable="true"
              android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp">

              <ImageView
                  android:layout_width="48dp"
                  android:layout_height="48dp"
                  android:src="@drawable/ic_document"
                  android:contentDescription="@string/document_icon_desc"
                  app:tint="@color/blue_primary"
                  android:layout_marginBottom="12dp" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Document"
                  android:textSize="16sp"
                  android:textStyle="bold"
                  android:textColor="@color/primary_text"
                  android:gravity="center" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Scan"
                  android:textSize="14sp"
                  android:textColor="@color/secondary_text"
                  android:gravity="center" />
            </LinearLayout>
          </com.google.android.material.card.MaterialCardView>

          <!-- Receipt Scan Card -->
          <com.google.android.material.card.MaterialCardView
              android:id="@+id/cardScanReceipt"
              android:layout_width="0dp"
              android:layout_height="140dp"
              android:layout_weight="1"
              android:layout_marginStart="8dp"
              app:cardCornerRadius="20dp"
              app:cardElevation="8dp"
              app:strokeWidth="0dp"
              android:clickable="true"
              android:focusable="true"
              android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp">

              <ImageView
                  android:layout_width="48dp"
                  android:layout_height="48dp"
                  android:src="@drawable/ic_receipt"
                  android:contentDescription="@string/receipt_icon_desc"
                  app:tint="@color/green_primary"
                  android:layout_marginBottom="12dp" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Receipt"
                  android:textSize="16sp"
                  android:textStyle="bold"
                  android:textColor="@color/primary_text"
                  android:gravity="center" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Scan"
                  android:textSize="14sp"
                  android:textColor="@color/secondary_text"
                  android:gravity="center" />
            </LinearLayout>
          </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Second Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

          <!-- Business Card Scan -->
          <com.google.android.material.card.MaterialCardView
              android:id="@+id/cardScanBusinessCard"
              android:layout_width="0dp"
              android:layout_height="140dp"
              android:layout_weight="1"
              android:layout_marginEnd="8dp"
              app:cardCornerRadius="20dp"
              app:cardElevation="8dp"
              app:strokeWidth="0dp"
              android:clickable="true"
              android:focusable="true"
              android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp">

              <ImageView
                  android:layout_width="48dp"
                  android:layout_height="48dp"
                  android:src="@drawable/ic_business_card"
                  android:contentDescription="@string/business_card_icon_desc"
                  app:tint="@color/orange_primary"
                  android:layout_marginBottom="12dp" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Business"
                  android:textSize="16sp"
                  android:textStyle="bold"
                  android:textColor="@color/primary_text"
                  android:gravity="center" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Card"
                  android:textSize="14sp"
                  android:textColor="@color/secondary_text"
                  android:gravity="center" />
            </LinearLayout>
          </com.google.android.material.card.MaterialCardView>

          <!-- Handwritten Note Scan -->
          <com.google.android.material.card.MaterialCardView
              android:id="@+id/cardScanHandwritten"
              android:layout_width="0dp"
              android:layout_height="140dp"
              android:layout_weight="1"
              android:layout_marginStart="8dp"
              app:cardCornerRadius="20dp"
              app:cardElevation="8dp"
              app:strokeWidth="0dp"
              android:clickable="true"
              android:focusable="true"
              android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp">

              <ImageView
                  android:layout_width="48dp"
                  android:layout_height="48dp"
                  android:src="@drawable/ic_handwriting"
                  android:contentDescription="@string/handwritten_icon_desc"
                  app:tint="@color/purple_primary"
                  android:layout_marginBottom="12dp" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Handwritten"
                  android:textSize="16sp"
                  android:textStyle="bold"
                  android:textColor="@color/primary_text"
                  android:gravity="center" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Note"
                  android:textSize="14sp"
                  android:textColor="@color/secondary_text"
                  android:gravity="center" />
            </LinearLayout>
          </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

      </LinearLayout>

      <!-- Quick Actions Section -->
      <com.google.android.material.card.MaterialCardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="24dp"
          app:cardCornerRadius="20dp"
          app:cardElevation="6dp"
          app:strokeWidth="1dp"
          app:strokeColor="@color/stroke_color"
          app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Quick Actions"
              android:textSize="20sp"
              android:textStyle="bold"
              android:textColor="@color/primary_text"
              android:layout_marginBottom="20dp" />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:weightSum="3">

            <LinearLayout
                android:id="@+id/layoutViewHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

              <ImageView
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:src="@drawable/ic_history"
                  android:contentDescription="@string/history_icon_desc"
                  app:tint="@color/blue_primary"
                  android:layout_marginBottom="12dp" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="History"
                  android:textSize="14sp"
                  android:textColor="@color/secondary_text"
                  android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

              <ImageView
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:src="@drawable/ic_settings"
                  android:contentDescription="@string/settings_icon_desc"
                  app:tint="@color/gray_primary"
                  android:layout_marginBottom="12dp" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Settings"
                  android:textSize="14sp"
                  android:textColor="@color/secondary_text"
                  android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutShare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

              <ImageView
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:layout_marginBottom="12dp"
                  android:contentDescription="@string/share_icon_desc"
                  android:src="@drawable/ic_share"
                  app:tint="@color/green_primary" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Share"
                  android:textSize="14sp"
                  android:textColor="@color/secondary_text"
                  android:gravity="center" />
            </LinearLayout>
          </LinearLayout>
        </LinearLayout>
      </com.google.android.material.card.MaterialCardView>

      <!-- Additional Features Section -->
      <com.google.android.material.card.MaterialCardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="16dp"
          app:cardCornerRadius="20dp"
          app:cardElevation="6dp"
          app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="✨ Features"
              android:textSize="18sp"
              android:textStyle="bold"
              android:textColor="@color/primary_text"
              android:layout_marginBottom="16dp" />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="• Auto edge detection\n• High-quality PDF export\n• Cloud sync support\n• OCR text recognition\n• Multi-page scanning"
              android:textSize="14sp"
              android:textColor="@color/secondary_text"
              android:lineSpacingExtra="4dp" />

        </LinearLayout>
      </com.google.android.material.card.MaterialCardView>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:layout_marginBottom="32dp"
          android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Document Scanner"
            android:textColor="@color/primary"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:text="Document Scanner" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:text="Scan, digitize, and organize your documents"
            android:textColor="@color/secondary_text"
            android:textSize="16sp"
            tools:text="Scan, digitize, and organize your documents" />
      </LinearLayout>

    </LinearLayout>

  </ScrollView>

</FrameLayout>